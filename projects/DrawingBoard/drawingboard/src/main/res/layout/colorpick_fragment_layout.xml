<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/whitebackgroud"
            android:layout_centerInParent="true"
            android:layout_width="360dp"
            android:layout_height="200dp"
            android:src="@drawable/actionbar_background" />

        <TextView
            android:id="@+id/pen_size_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:text="Pen Size"
            android:layout_alignTop="@id/whitebackgroud"
            android:layout_alignLeft="@id/whitebackgroud" />

        <SeekBar
            android:layout_below="@id/pen_size_text"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/pen_size_bar"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:max="20"
            android:progress="1"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/confirm_button"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/pen_size_bar"
            android:layout_centerHorizontal="true"
            android:text="change" />
    </RelativeLayout>
</RelativeLayout>