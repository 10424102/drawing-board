<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="actionbar_style" parent="android:Widget.ActionBar">
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="android:titleTextStyle">@style/actionbar_title_style</item>
        <item name="android:actionOverflowButtonStyle">@style/overflower_style</item>
        <item name="android:actionButtonStyle">@style/actionbutton_style</item>
    </style>

    <style name="actionbar_title_style" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/bai</item>
    </style>

    <style name="overflower_style" parent="android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/actionbar_chest_icon</item>
    </style>

    <style name="actionbutton_style" parent="android:style/Widget.ActionButton">
        <item name="android:background">@drawable/actionbutton_background</item>
    </style>
</resources>