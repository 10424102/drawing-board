<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/tool_icon_wrapper">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/default_tool_icon"
            android:id="@+id/tool_icon" />
    </RelativeLayout>


    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/default_tool_item_text_bg"
        android:text="Dummy"
        android:gravity="center"
        android:textColor="#fff"
        android:id="@+id/tool_name"
        android:layout_below="@+id/tool_icon_wrapper" />

</RelativeLayout>